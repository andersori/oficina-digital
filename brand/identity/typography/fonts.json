{
  "primary": {
    "family": "Poppins",
    "weights": ["400", "500", "600", "700", "800"],
    "usage": "Títulos, logotipo, headings",
    "fallback": "Montserrat, sans-serif",
    "googleFonts": "https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap"
  },
  "secondary": {
    "family": "Inter",
    "weights": ["400", "500", "600"],
    "usage": "Texto corrido, botões, labels",
    "fallback": "Roboto, Arial, sans-serif",
    "googleFonts": "https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
  },
  "hierarchy": {
    "h1": {
      "font": "Poppins",
      "weight": "800",
      "size": "2.5rem",
      "lineHeight": "1.2",
      "letterSpacing": "-0.02em"
    },
    "h2": {
      "font": "Poppins",
      "weight": "700",
      "size": "2rem",
      "lineHeight": "1.3",
      "letterSpacing": "-0.01em"
    },
    "h3": {
      "font": "Poppins",
      "weight": "600",
      "size": "1.5rem",
      "lineHeight": "1.4",
      "letterSpacing": "0"
    },
    "h4": {
      "font": "Poppins",
      "weight": "600",
      "size": "1.25rem",
      "lineHeight": "1.4",
      "letterSpacing": "0"
    },
    "body": {
      "font": "Inter",
      "weight": "400",
      "size": "1rem",
      "lineHeight": "1.6",
      "letterSpacing": "0"
    },
    "bodyLarge": {
      "font": "Inter",
      "weight": "400",
      "size": "1.125rem",
      "lineHeight": "1.6",
      "letterSpacing": "0"
    },
    "bodySmall": {
      "font": "Inter",
      "weight": "400",
      "size": "0.875rem",
      "lineHeight": "1.5",
      "letterSpacing": "0"
    },
    "button": {
      "font": "Inter",
      "weight": "500",
      "size": "0.875rem",
      "lineHeight": "1.5",
      "letterSpacing": "0.025em",
      "textTransform": "none"
    },
    "caption": {
      "font": "Inter",
      "weight": "400",
      "size": "0.75rem",
      "lineHeight": "1.4",
      "letterSpacing": "0.025em"
    }
  },
  "responsive": {
    "mobile": {
      "h1": "2rem",
      "h2": "1.75rem",
      "h3": "1.25rem",
      "body": "1rem"
    },
    "tablet": {
      "h1": "2.25rem",
      "h2": "1.875rem",
      "h3": "1.375rem",
      "body": "1rem"
    },
    "desktop": {
      "h1": "2.5rem",
      "h2": "2rem",
      "h3": "1.5rem",
      "body": "1rem"
    }
  }
}